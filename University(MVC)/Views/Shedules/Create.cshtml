@model University_MVC_.Shedule

@{
    ViewData["Title"] = "Create";
}

<h1>Створення нового розкладу @ViewBag.GroupN @ViewBag.GroupId</h1>

<h4>Shedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@ViewBag.GroupId" name="GroupId" />

            <div class="form-group">
                <label asp-for="DayId" class="control-label"></label>
                <select asp-for="DayId" class="form-control" asp-items="ViewBag.DayId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
