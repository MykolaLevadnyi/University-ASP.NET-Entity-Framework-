@model IEnumerable<University_MVC_.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
    <head>
        <style>
            body {
            
                background-size: cover;
                background-repeat: no-repeat;
            }

            .bg-mydark {
                opacity: 0.8;
            }
            .bg-my {
                opacity: 1;
            }

            .text-mybright {
                opacity: 1;
                color: black;
            }
        </style>
    </head>


    <div class="bg-light text-center bg-mydark"><h1 class="text-center text-mybright">Інформація аккаунту</h1></div>
    <div class="bg-light text-center bg-mydark">
        @foreach (var user in Model)
        {
            if (user.Email == User.Identity.Name)
            {

                <p class="text-mybright">@user.Email</p>
                <p class="text-mybright">@user.Year</p>
                <div style="margin:0 auto; " >
                    <table class="text-center">
                        <tr>
                            <td>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" value="Вихід" class="btn btn-sm bg-my btn-primary" />
                                </form>
                            </td>
                            <td>
                                <a class="btn btn-sm bg-my btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                            </td>
                            <td>
                                <a class="btn btn-sm bg-my btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                            </td>
                            @if (User.IsInRole("admin"))
                            {

                                <td>
                                    <form method="post" asp-controller="Roles" asp-action="UserList">
                                        <input type="submit" value="Права" class="btn btn-sm bg-my btn-primary" />
                                    </form>

                                </td>
                                <td>
                                    <form method="post" asp-controller="Users" asp-action="Index">
                                        <input type="submit" value="Список користувачів" class="btn btn-sm bg-my btn-primary" />
                                    </form>
                                </td>

                            }
                        </tr>
                    </table>
                </div>
                    }
                    }
                </div>
